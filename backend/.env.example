# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/email-campaign
MONGODB_TEST_URI=mongodb://localhost:27017/email-campaign-test

# Redis Configuration (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS S3
S3_BUCKET=your-bucket-name
EMAIL_LIST_KEY=email-list.csv
UNSUBSCRIBED_KEY=unsubscribed.txt

# AWS SES
SES_TEMPLATE=your-template-name
UNSUBSCRIBE_URL=https://your-domain.com/unsubscribe
NOTIFY_EMAIL=admin@your-domain.com

# Campaign Configuration
BASE_DAILY_TOTAL=4000
MAX_EMAIL_PERCENTAGE=35
RANDOMIZATION_INTENSITY=0.7

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Frontend URL (for CORS)
FRONTEND_URL=https://emsfedp.vercel.app

# Admin Setup
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123
ADMIN_NAME=System Administrator
